        "eslint-plugin-react-hooks": "^4.x.x",
        "prettier": "^3.x.x",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.33.1",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.7"
